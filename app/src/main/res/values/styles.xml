<resources
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CardViewItemListContent">
        <item name="android:paddingTop">@dimen/contentCardViewPaddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/contentCardViewPaddingTopBottom</item>
        <item name="android:paddingLeft">@dimen/contentCardViewPaddingLeftRight</item>
        <item name="android:paddingRight">@dimen/contentCardViewPaddingLeftRight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewBase" parent="CardView">
        <item name="cardElevation">@dimen/cardViewElevation</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThirdOpenSansBoldText" parent="@style/BaseFontOpenSansRegularBlack">
        <item name="android:textSize">@dimen/thirdText</item>
    </style>

    <style name="MainOpenSansRegularText" parent="@style/BaseFontOpenSansRegularBlack">
        <item name="android:textSize">@dimen/secondText</item>
    </style>

    <style name="MainOpenSansBoldText" parent="@style/BaseFontOpenSansBoldBlack">
        <item name="android:textSize">@dimen/mainText</item>
    </style>
    <style name="SecondOpenSansBoldText" parent="@style/BaseFontOpenSansBoldBlack">
        <item name="android:textSize">@dimen/secondText</item>
    </style>

    <style name="BaseFontOpenSansBoldBlack" parent="@style/BaseFont">
        <item name="android:fontFamily" tools:targetApi="16">@font/open_sans_bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="BaseFontOpenSansRegularBlack" parent="@style/BaseFont">
        <item name="android:fontFamily" tools:targetApi="16">@font/open_sans_regular</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="BaseFont">
        <item name="android:singleLine">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing" tools:targetApi="21">-0.02</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
