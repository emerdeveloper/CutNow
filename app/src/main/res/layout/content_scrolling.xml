<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/barber_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.profile.BarberProfileFragment">

    <!--Rating-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center_vertical"
            android:layout_margin="20dp">
        <TextView
                android:id="@+id/qualification"
                style="@style/ThirdOpenSansBoldText"
                tools:text="4.5"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="4.5"
                android:numStars="5" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>
        <TextView
                android:id="@+id/usersQuantity"
                style="@style/ThirdOpenSansBoldText"
                tools:text="(100)"/>
    </LinearLayout>
